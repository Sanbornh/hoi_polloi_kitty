<h3>Create a New Project</h3>

<%= form_for(@project) do |f| %>
  
  <% if @project.errors.any? %>
    <div class="error_messages">
      <h4>Error!</h4>
      <ul>
        <% for message in @project.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p><%= f.label :name %></p>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <p><%= f.label :goal %></p>
    <%= f.number_field :goal %>
  </div>

  <div class="field">
    <p><%= f.label :funding_start %></p>
    <%= f.date_field :funding_start %>
  </div>

  <div class="field">
    <p><%= f.label :funding_end %></p>
    <%= f.date_field :funding_end %>
  </div>

  <div class="field">
    <p><%= f.label :description %></p>
    <%= f.text_area :description %>
  </div>

  <div id="break-points">
    <hr>
    <h3>Add Pledges</h3>
    <p><%= f.fields_for :break_points do |bp| %></p>
          <%= render 'break_point_fields', :f => bp %>
          <div class="links">
            <%= link_to_add_association 'Add Break Point', f, :break_points %>
          </div>
      <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>